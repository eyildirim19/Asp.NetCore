@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <style>
        .myTablo{
            cursor:pointer;
            min-height:20px;
            background-color:#ff6a00;
            margin-bottom:10px;
        }
            .myTablo .list-group {
                display: none;
            }
    </style>

    <script>

        $(document).ready(function () {

            $(".myTablo").click(function () {

                $(this).find(".list-group").fadeIn();

            });
        });

    </script>

</head>
<body>

    <div class="container">

        <div class="row">

            @for (int i = 1; i <= 10; i++)
            {
                <div class="col-lg-4 myTablo">
                    @i ler 
                    <ul class="list-group">
                        @for (int j = 1; j<=10; j++)
                        {
                            int result = i * j;
                            <li class="list-group-item"> @i x @j = @result  </li>
                        }
                    </ul>
                </div>
                <br />
            }
        </div>
    </div>
</body>
</html>
