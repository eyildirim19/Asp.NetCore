@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--Gelen ViewData'yı yazdır-->
    <title>@ViewData["baslik"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">MyProject</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myMenu" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="myMenu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Home">AnaSayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Hakkimda">Hakkımızda</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Referans">Referanslarımız</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Iletisim">İletişim</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container">

        <div class="row">

            <div class="col-lg-4">

                @await Component.InvokeAsync("Kategori")
            </div>
            <div class="col-lg-8">
                <!--buraya içerik sayfaları gelecek...-->
                @RenderBody()
            </div>
            @*
                @RenderBody() => Alt sayfaları render etmek için kullanılır
                Bu viewı layout olarak kullanan view burada render edilir..
            *@


            Bu view'a gönderilen ViewDataları yazdır..
            @ViewData["ogr1"]
            @ViewData["ogr2"]
            @ViewData["ogr3"]

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>