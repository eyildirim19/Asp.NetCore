@model List<Category>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section-heading">
                <h2>Popular Categories</h2>
                <h6>Check Them Out</h6>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="naccs">
                <div class="grid">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="menu">

                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    string className = "";
                                    if (i == 0)
                                        className = "first-thumb active";
                                    else if (i == Model.Count - 1)
                                        className = "last-thumb";

                                    <div class="@className">
                                        <div class="thumb">
                                            <span class="icon"><img src="assets/images/@item.IconPath" alt=""></span>
                                            @item.Name
                                        </div>
                                    </div>
                                    i++;
                                }

                            </div>
                        </div>
                        <div class="col-lg-9 align-self-center">
                            <ul class="nacc">
                                @{
                                    int j = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    string className = i == 0 ? "active" : "";
                                    <li class="active">
                                        <div>
                                            <div class="thumb">
                                                <div class="row">
                                                    <div class="col-lg-5 align-self-center">
                                                        <div class="left-text">
                                                            <h4>@item.Title</h4>
                                                            <p>@item.Description</p>
                                                            <div class="main-white-button"><a href="#"><i class="fa fa-eye"></i> Discover More</a></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-7 align-self-center">
                                                        <div class="right-image">
                                                            <img src="assets/images/@item.LargeImage" alt="">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>